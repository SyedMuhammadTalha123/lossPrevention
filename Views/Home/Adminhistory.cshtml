
@{
    ViewData["Title"] = "Adminhistory";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
    <div class="main">
        <div class="n">
            <p style="font-size:240%;color:white;font-family:arial;margin-top:-22px;padding-bottom:13px;padding-top:63px">Loss Prevention In Stock Market</p>
        </div>
        <h6 style="color:white;font-size:30px;font-family:Arial;margin-left:400px;padding-top: 50px;
    padding-bottom: 30px;"> STOCK SELLING HISTORY</h6>

        <div style="color:white" class="back">
            @{List<Sell> allRows = ViewBag.DBData;
            }


            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>AvailableQuantity</td>
                        <td>PurchasedCost</td>
                        <td>QuantitySell</td>
                        <td>SellingCost</td>

                    </tr>
                </thead>
                <tbody>
                    @{

                        for (int i = 0; i < allRows.Count(); i++)
                        {
                            <tr>
                                <td>@allRows[i].AvailableQuantity</td>
                                <td>@allRows[i].PurchasedCost</td>
                                <td>@allRows[i].QuantitySell</td>
                                <td>@allRows[i].SellingCost</td>

                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
        <script>

            function logout() {
                alert("Do you want to Logout? ");
            }
        </script>

        <div class="sidenav">
            <img src="../images/login.png" width="190" height="200"><br />

            <a asp-controller="Home" asp-action="indexAdmin">Registered Users</a>
            <a asp-controller="Home" asp-action="History">Stock History</a>
            <a asp-controller="Home" asp-action="Managestock">Stock Prediction</a>
            <a asp-controller="Home" asp-action="Adminlivestock">Live Stock</a>
            <a asp-controller="Home" asp-action="AdminPortal" onclick="logout()">Logout</a>
        </div>

